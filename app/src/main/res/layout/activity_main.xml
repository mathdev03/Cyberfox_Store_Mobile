<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:layout_marginTop="25mm"
        android:text="CYBERFOX STORE" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Aproveite a loja de games a vontade!"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/btnLogar"
        android:background="@drawable/botao_personalizado01"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:text="Logar com sua conta"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="8dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnCriar"
        android:background="@drawable/botao_personalizado01"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:text="Crie uma nova conta"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Convidado"/>
    </LinearLayout>



</LinearLayout>